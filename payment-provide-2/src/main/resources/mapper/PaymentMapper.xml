<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loman.springcloud.dao.PaymentDao">

    <insert id="create" parameterType="Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment(serial) values(#{serial});
    </insert>

    <resultMap id="baseResultMap" type="com.loman.springcloud.entity.Payment">
        <id column="id" property="id" jdbcType="INTEGER" />
        <id column="serial" property="serial" jdbcType="VARCHAR" />  <!-- 防止有下划线匹配问题 -->
    </resultMap>
    <select id="getPaymentById" parameterType="int" resultMap="baseResultMap">
        select * from payment where id = #{id}
    </select>
</mapper>